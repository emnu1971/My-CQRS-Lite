@page
@model AddCertificateModel
@{
    ViewData["Title"] = "Add a new Certificate";
}
<section id="main">
    <h1>Certificate Request</h1>
    <p>
        This page can be used to request a new certificate, this by supplying
        EnterpriseNumber, ProductCategory, Product and Country.
    </p>
</section>
<form method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
    <div class="form-horizontal leftMarginDefault">
        <div class="form-group">
            <div>EnterpriseNumber</div>
            <input asp-for="CertificateRequestVm.EnterpriseNumber" class="form-control" />
        </div>
        <div class="form-group">
            <div>Product Category</div>
            <input asp-for="CertificateRequestVm.ProductCategory" class="form-control" />
        </div>
        <div class="form-group">
            <div>Product</div>
            <input asp-for="CertificateRequestVm.Product" class="form-control" />
        </div>
        <div class="form-group">
            <div>Country</div>
            <input asp-for="CertificateRequestVm.Country" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Cancel" asp-page-handler="Cancel" />
            <input type="submit" value="Save" asp-page-handler="Save" />
        </div>
    </div>
</form>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">&nbsp;</div>
    <div class="col-6">
        <ul id="updateList"></ul>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/certificate.js"></script>